Solution3.

#!/bin/bash
read n
a=0
b=1
echo "The fibonacci Series is "
echo "$a"
echo "$b"
for (( i = 0; i < n; i++ )); do
c=$(( $a + $b ))
echo "$c"
a=$b
b=$c
done

Solution4.
#!/bin/bash
echo "Enter any character: "
read ch
case $ch in
"a") echo "It is a vowel.";;
"e") echo "It is a vowel.";;
"i") echo "It is a vowel.";;
"o") echo "It is a vowel.";;
"u") echo "It is a vowel.";;
*) echo "It is not a vowel."
esac
